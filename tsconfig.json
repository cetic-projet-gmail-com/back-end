{
   "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "target": "ES2017",
       "noImplicitAny": false,
       "moduleResolution": "node",
       "sourceMap": true,
       "outDir": "dist",
       "baseUrl": ".",
       "paths": {
           "*": [
               "node_modules/*",
               "src/types/*"
           ]
       }
   },
   "include": [
       "src/**/*"
   ]
}
